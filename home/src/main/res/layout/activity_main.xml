<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.zs.common.viewpager.CustomViewPager
            android:id="@+id/home_vp"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sw_0_5dp"
            android:background="#d9d9d9" />

        <LinearLayout
            android:id="@+id/home_bottom_lin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sw_45dp"
            android:layout_marginTop="@dimen/sw_7dp"
            android:orientation="horizontal">

            <com.zs.common.customview.DrawableTextView
                android:id="@+id/home_news_dtv"
                style="@style/HomeBottomTextStyle"
                android:textColor="#0091FF"
                android:text="新闻"
                app:topDrawable="@drawable/home_news_selected" />

            <com.zs.common.customview.DrawableTextView
                android:id="@+id/home_mine_dtv1"
                style="@style/HomeBottomTextStyle"
                android:text="我的"
                app:topDrawable="@drawable/home_mine_no" />

        </LinearLayout>

    </LinearLayout>
</layout>

